    <apikit:config name="api-mulesoft-clients-register-config" api="resource::55e6efd8-c159-4d1e-8e15-cd8edd4d750a:api-mulesoft-clients-register:1.0.0:raml:zip:api-mulesoft-clients-register.raml" outboundHeadersMapName="outboundHeaders" httpStatusVarName="httpStatus" />
    <flow name="api-mulesoft-clients-register-main" doc:id="8a8eb52a-c48e-4e66-8d6c-e83e70cf89b7">
